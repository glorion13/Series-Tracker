<ResourceDictionary
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<Style x:Key="ItemTitle" TargetType="TextBlock">
		<Setter Property="FontFamily" Value="Segoe WP Black"/>
		<Setter Property="FontSize" Value="30"/>
		<Setter Property="Margin" Value="12,0"/>
		<Setter Property="Foreground" Value="Black"/>
	</Style>
	<Style x:Key="ItemDescription" TargetType="TextBlock">
		<Setter Property="Foreground" Value="#FF353535"/>
		<Setter Property="Margin" Value="12,-6,12,0"/>
	</Style>
	<!-- Resource dictionary entries should be defined here. -->
</ResourceDictionary>